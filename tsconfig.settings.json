{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true,
        "baseUrl": "./src"
    },
    "include": [
        "typings.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}