{
    "name": "root",
    "private": true,
    "license": "Apache-2.0",
    "licenses": [
        {
            "type": "Apache-2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0"
        }
    ],
    "scripts": {
        "dev": "lerna run dev --parallel",
        "dev:offline": "REACT_APP_OFFLINE_MODE=true lerna run dev --parallel",
        "clean": "lerna run clean",
        "build": "lerna run clean && lerna run build",
        "lint": "lerna run lint --stream --concurrency 1",
        "dev-live": "PORT=4000 cd packages/server && yarn start",
        "prod": "cd packages/server && yarn start"
    },
    "volta": {
        "node": "14.15.4",
        "yarn": "1.22.10"
    },
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "lerna": "^3.22.1",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "eslint": "^7.17.0",
        "husky": ">=4",
        "lint-staged": ">=10",
        "prettier": "2.2.1",
        "scripty": "^2.0.0",
        "ts-node": "^9.1.1",
        "ttypescript": "^1.5.12",
        "typescript": "^4.1.3",
        "typescript-transform-paths": "^2.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": [
            "eslint --cache --fix",
            "prettier --write"
        ],
        "**/*.{css,md}": "prettier --write"
    }
}