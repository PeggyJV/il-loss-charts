{
    "extends": "../tsconfig.settings.json",
    "compilerOptions": {
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./src",
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            }
        ],
        "paths": {
            "@config": ["config/app"]
        },
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
