{
    "extends": "../tsconfig.settings.json",
    "compilerOptions": {
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./src",
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "useRootDir": true
            },
            {
                "transform": "typescript-transform-paths",
                "useRootDir": true,
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build.ts"
    ]
}