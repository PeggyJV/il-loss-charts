{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["esnext"],
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "incremental": true,
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "*": ["*"]
        },
        "resolveJsonModule": true
    }
}
